<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:tag="cards main container">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:clickable="true"
        android:id="@+id/clickLayout"
        android:background="@drawable/draweritem_select"
        android:elevation="2dp">

        <ImageView
            android:id="@+id/imageView"
            android:tag="image_tag"
            android:layout_height="45dp"
            android:src="@drawable/class_circle"
            android:layout_weight="0.15"
            android:layout_width="60dp"
            android:layout_marginTop="15dp"
            android:elevation="1dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:contentDescription="drawer_logo"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="2dp"
                android:textStyle="bold"
                android:textColor="@color/colorAccent"
                android:text="SubjectName"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="16sp"
                android:paddingTop="6dp"
                android:fontFamily="sans-serif"
                android:textAllCaps="false" />

            <TextView
                android:id="@+id/textViewVersion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/bb_inActiveBottomBarItemColor"
                android:text="ClassName"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:paddingRight="10dp"
                android:textSize="14sp"
                android:layout_marginTop="2dp"/>

            <TextView
                android:text="Division"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/division"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp" />

            <TextView
                android:id="@+id/textViewid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:visibility="gone"
                android:textColor="@color/textcolor"
                android:layout_marginTop="10dp"
                android:text="id"
                android:textAppearance="?android:attr/textAppearanceMedium"/>


        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="@color/bottomLine"/>


</LinearLayout>