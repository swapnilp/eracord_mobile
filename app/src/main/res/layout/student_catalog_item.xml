<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:tag="cards main container">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:showDividers="beginning|middle|end"
            android:elevation="2dp"
            android:background="@color/colorWhite">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/studentImg"
                android:layout_width="60dp"
                android:layout_height="45dp"
                android:src="@drawable/student"
                app:civ_border_width="1dp"
                app:civ_border_color="@color/bottomLine"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:elevation="1dp"
                android:contentDescription="logo"
                android:layout_marginTop="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/stud_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="2dp"
                    android:textStyle="bold"
                    android:textColor="@color/colorAccent"
                    android:text="StudentName"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="16sp"
                    android:paddingTop="5dp"
                    android:fontFamily="sans-serif"
                    android:textAllCaps="false" />

                <TextView
                    android:id="@+id/stud_class"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/bb_inActiveBottomBarItemColor"
                    android:text="ClassName"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:paddingRight="10dp"
                    android:textSize="13sp"
                    android:layout_marginTop="2dp" />

                <TextView
                    android:text="Hostel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/stud_hostel"
                    android:layout_marginTop="2dp"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/bb_inActiveBottomBarItemColor"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="13sp"
                    android:layout_marginBottom="3dp" />

                <TextView
                    android:id="@+id/textViewid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:visibility="gone"
                    android:textColor="@color/textcolor"
                    android:layout_marginTop="10dp"
                    android:text="id"
                    android:textAppearance="?android:attr/textAppearanceMedium"/>


            </LinearLayout>

        </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="@color/bottomLine"/>



</LinearLayout>
