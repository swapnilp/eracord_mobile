<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/appBgColor">

    <include
        android:id="@+id/tool_bar"
        layout="@layout/tool_bar"
        style="@style/BB_BottomBarBadge_Text">
    </include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/email"
                android:textStyle="bold"
                android:textColor="@color/colorAccent"
                android:textSize="16sp"
                android:layout_gravity="end"
                android:id="@+id/useremail"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="30dp"
                android:textAlignment="viewStart"
                android:textAllCaps="true" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="353dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="20dp"
                    android:text="@string/choose_organization"
                    android:layout_marginRight="20dp"
                    android:textColor="@color/textcolor"
                    android:textSize="18sp"
                    android:fontFamily="sans-serif" />


                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/divider"
                    android:layout_marginTop="10dp">


                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:id="@+id/org_id"
                        android:visibility="gone"
                        android:layout_marginLeft="10dp"
                        android:text=""
                        android:textSize="18sp"
                        android:textColor="@color/textcolor"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="1"
                        tools:ignore="RtlHardcoded" />

                    <Spinner
                        android:id="@+id/spinner"
                        android:visibility="visible"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp"
                        android:spinnerMode="dialog"
                        android:prompt="@string/org"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>


            <!--<EditText android:id="@+id/editTextPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberPassword"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/textcolor"
                android:hint="@string/pin_label"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp" />-->


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp">

                <TextView
                    android:text="@string/pin_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:textColor="@color/textcolor"
                    android:textAllCaps="false"
                    android:textSize="18sp" />

                <com.example.vidhiraj.sample.PinEntryView
                    android:id="@+id/editTextPassword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:accentType="character"
                    app:digitBackground="@android:color/white"
                    app:digitTextColor="@color/colorAccent"
                    app:digitElevation="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    app:digitHeight="60dp"
                    app:digitWidth="100dp"
                    app:digitSpacing="60dp" />

            </LinearLayout>

            <Button
                android:id="@+id/buttonLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorAccent"
                android:textColor="@android:color/white"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:clickable="true"
                android:layout_marginBottom="10dp"
                android:padding="12dp"
                android:text="@string/login"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textStyle="normal|bold"
                android:textSize="18sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/diffuser"
                android:textSize="15sp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/bb_tabletRightBorderDark"
                android:text="@string/hint_login_user"
                android:clickable="true"
                android:textAlignment="center" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>